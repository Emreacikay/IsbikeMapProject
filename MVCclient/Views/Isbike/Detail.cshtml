@model IsbikeVievModel

@{
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <style>
    td,th{
        text-align: center;
        }
    </style>
    
</head>
<body>
<h3 class="text-md-center font-weight-bold">Details of @Model.adi </h3>

<table id="IsbikeStation" class="table table-bordered table-hover">
                            <thead>
                                <tr id="0">
                                    <th>Station Id
                                    </th>
                                    <th>Station No
                                    </th>
                                    <th>Station Name
                                    </th>
                                    <th>Active Status
                                    </th>
                                    <th>Full Cycle
                                    </th> 
                                    <th>Empty Cycle
                                    </th>
                                    <th>Latitude
                                    </th>
                                    <th>Longitude
                                    </th>
                                    <th>Last Connection
                                    </th>
                                    <th>Operations  
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                  
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => Model.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.istasyon_no)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.adi)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.aktif)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.dolu)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.bos)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.lat)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.lon)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.sonBaglanti)</td>
                                         <td>
                                          <a asp-controller="Isbike" asp-action="Update" asp-route-id="@Model.Id">Edit</a> |
                                          <a onclick="return confirm('Are you sure?')" asp-controller="Isbike" asp-action="Delete" asp-route-id="@Model.Id" style="color:red">Delete</a>
                                         </td> 
                                   </tr>
         
                                
                            </tbody>
                        </table>
  </body>
  </html>