@{
    ViewData["Title"] = "IBB Isbike ";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<style>
body{
    background-color: rgb(34, 65, 148);
    overflow: hidden;
    font-family: "Poppins", "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
}
.back-image img {
    position:relative;
    width: 206px;
}

.back-image .milyon-sol{
    position: fixed;
    right: 0;
    top: 7px;
}
.back-image .ibb-logo{
    position: fixed;  
    width: 140px;
    right: 20px;
    bottom: 76px;
    z-index: 1;
}


.back-image .isbike-logo{
    position: fixed;
    left: 10px;
    width: 180px;
    bottom: 110px;
    z-index: 1;
}

.back-image .milyon-sag{
    position: fixed;
    left: 0;
    top: 7px;
}

.content {
    position: fixed;
    bottom: 54px;
    background: rgba(0, 0, 0, 0.7);
    color: #f1f1f1;
    width: 100%;
    padding: 11px;
    left: 0;
}
.content .buttons{
    text-align: center;
}
.content p{
    text-align:center
}

h1{
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    text-align: center;
}


/* Style the button used to pause/play the video */
#myBtn {

    width: 150px;
    font-size: 18px;
    padding: 5px;
    border: none;
    background: #000;
    color: #fff;
    cursor: pointer;
}

#myBtn:hover {
  background: #ddd;
  color: black;
}

.back-image{
    position:relative;
}

video {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
}
</style>

</head>
<body>
<div>
<div class="back-image">

<img class="milyon-sag" src="~/16milyonlogoters.png" alt="HTML5 Icon" >

<img class="milyon-sol" src="~/16-milyon-logo-2.png" alt="HTML5 Icon" >

<img class="ibb-logo" src="~/ibblogoo.png" alt="HTML5 Icon" >

<img class="isbike-logo" src="~/logo-white.png" alt="HTML5 Icon" >

</div>
<video autoplay muted loop class="myVideo">
  <source src="~/videoplayback.mp4" type="video/mp4">
</video>
</div>

<div class="content">
  <h1>Isbike Servis</h1>
  <p>First Login or Register to be able to use service.</p>
  <!-- Use a button to pause/play the video with JavaScript -->
  <div class="buttons">
  <button id="myBtn" onclick="relocate_Login()" type="button">Login</button>
  <button id="myBtn" onclick="relocate_Register()" type="button" >Register</button>
  </div>
 
</div>

  <script>
function relocate_Login()
{
     location.href = "/Login";
} 

function relocate_Register()
{
     location.href = "/Register";
} 
</script>

</body>
</html>